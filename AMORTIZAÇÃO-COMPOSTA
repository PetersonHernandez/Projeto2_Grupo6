            out.println("<tr><td>Mês</td><td>RESTA PAGAR</td><td>TAXA DE JUROSL</td><td>TAXA MESAL</td></tr>");
                for(int x=1;x<=n;x++)
                    {
                        i/12=tM
                        JurosM = tM*c;
                        i=c*tM*n;
                        c = c-JurosM;
                        out.println("<tr><td>"+n+"</td><td>"+c+"</td><td>"+i+"</td><td>"+c+"</td><td>"+i+"</td><td>"+tM+"</td></tr>");
                
                    }
